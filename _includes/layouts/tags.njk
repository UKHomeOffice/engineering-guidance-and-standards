{% extends "../../node_modules/@x-govuk/govuk-eleventy-plugin/src/layouts/tags.njk" %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{% block beforeContent %}
  <nav aria-label="Breadcrumbs">
    {{ govukBreadcrumbs({
      classes: "govuk-!-display-none-print",
      items: [ {text: "Home", href: "/" | canonicalUrl} ]
    }) }}
  </nav>
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ appDocumentHeader({
        title: title or "Tags"
      }) }}

      <ul class="govuk-list govuk-list--bullet">
       {% for tag in collections.all | getAllTags | filterTagList %}
       {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
        <li>
          <a class="govuk-link" href="{{ tagUrl }}">{{ tag }}</a>
        </li>
       {% endfor %}
      </ul>
    </div>
    <div class="govuk-grid-column-one-third-from-desktop">
      {% block sidebar %}
        {% from "macros/navigationList.njk" import navigationList %}
        {{ navigationList(page.url, "Engineering guidance and standards", homepageLinks) }}
      {% endblock %}
    </div>
  </div>
{% endblock %}
